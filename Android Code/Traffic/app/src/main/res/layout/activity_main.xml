<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<FrameLayout
    android:layout_weight="1"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="#EFEFEF"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:outlineAmbientShadowColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="@font/logo"
            android:text="ROUTE"/>

    <ImageView
        android:id="@+id/iv_best_route"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/base"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:layout_gravity="center"
        app:cardBackgroundColor="#F3F3F3"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="7dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            app:cardBackgroundColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_direction"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_up"/>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>
    <TextView
        android:fontFamily="@font/main"
        android:id="@+id/tv_best"
        android:textColor="#00C845"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading data..."
        android:textAlignment="center"
        android:layout_marginEnd="7dp"
        android:textSize="22dp"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_marginTop="20dp"
      app:cardBackgroundColor="#EFEFEF"
      android:outlineSpotShadowColor="@color/white"
      app:cardCornerRadius="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:fontFamily="@font/main"
              android:text="Number of vehicles"
              android:textAlignment="center"
              android:textColor="#787878"
              android:textSize="17dp" />
          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:layout_marginStart="60dp"
              android:layout_marginEnd="60dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
              <androidx.cardview.widget.CardView
                  android:layout_width="75dp"
                  app:cardCornerRadius="10dp"
                  app:cardBackgroundColor="#F9F9F9"
                  android:outlineSpotShadowColor="@color/white"
                  android:outlineAmbientShadowColor="@color/white"
                  android:layout_height="90dp"
                  android:orientation="vertical">
                  <TextView
                      android:fontFamily="@font/main"
                      android:layout_gravity="center"
                      android:id="@+id/tv_car1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:textColor="@color/text_light"
                      android:textSize="40dp"/>
              </androidx.cardview.widget.CardView>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Route A"
                      android:textAlignment="center"
                      android:fontFamily="@font/main"
                      android:textSize="17dp"
                      android:textColor="@color/text_light"/>
              </LinearLayout>
              <Space
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="1dp"/>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <androidx.cardview.widget.CardView
                      android:layout_width="75dp"
                      app:cardCornerRadius="10dp"
                      app:cardBackgroundColor="#F9F9F9"
                      android:outlineSpotShadowColor="@color/white"
                      android:outlineAmbientShadowColor="@color/white"
                      android:layout_height="90dp"
                      android:orientation="vertical">
                  <TextView
                      android:fontFamily="@font/main"
                      android:id="@+id/tv_car2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:layout_gravity="center"
                      android:textColor="@color/text_light"
                      android:textSize="40dp"/>

                  </androidx.cardview.widget.CardView>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Route B"
                      android:textAlignment="center"
                      android:fontFamily="@font/main"
                      android:textSize="17dp"
                      android:textColor="@color/text_light"/>
              </LinearLayout>
              <Space
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="1dp"/>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
              <androidx.cardview.widget.CardView
                  android:layout_width="75dp"
                  app:cardCornerRadius="10dp"
                  app:cardBackgroundColor="#F9F9F9"
                  android:outlineSpotShadowColor="@color/white"
                  android:outlineAmbientShadowColor="@color/white"
                  android:layout_height="90dp"
                  android:orientation="vertical">
                  <TextView
                      android:fontFamily="@font/main"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:layout_gravity="center"
                      android:textColor="@color/text_light"
                      android:textSize="40dp"/>
              </androidx.cardview.widget.CardView>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Route C"
                  android:textAlignment="center"
                  android:fontFamily="@font/main"
                  android:textSize="17dp"
                  android:textColor="@color/text_light"/>
          </LinearLayout>
          </LinearLayout>
      </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>